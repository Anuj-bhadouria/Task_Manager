<!-- rounded_button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#FF4081"/>

    <corners android:radius="8dp"/>

    <stroke
        android:width="1dp"
        android:color="#BDBDBD"/>

    <!-- Add shadow -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"/>

</shape>
